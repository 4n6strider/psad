depend() {
	need net logger
	use dns
}

PIDFILE=/var/run/psad/psad.pid

start() {
	ebegin "Starting psad daemons"
	/usr/sbin/psad &>/dev/null
	eend $?
}

stop() {
	ebegin "Stopping psad daemons"
	/usr/sbin/psad --Kill &>/dev/null
	eend $?
}
